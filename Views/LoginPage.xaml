<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AirsoftCore_App.Views.LoginPage"
             Title="Inicio de Sesión">
    <StackLayout>
        <Entry x:Name="entryUsuario" Placeholder="Nombre de Usuario" />
        <Entry x:Name="entryContraseña" Placeholder="Contraseña" IsPassword="True" TextChanged="OnEntryContraseñaTextChanged" />
        <Button Text="Iniciar Sesión" Clicked="OnBotonIniciarSesionClicked" BackgroundColor="#800020" TextColor="White"/>
        <Button Text="Ir a Registro" Clicked="OnBotonRegistrarseClicked" BackgroundColor="#800020" TextColor="White"/>
    </StackLayout>
</ContentPage>
